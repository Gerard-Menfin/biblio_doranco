{% extends "base.html.twig" %}

{% block body %}
<a href="{{ path("ajouter_livre") }}">Ajouter</a>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for livre in liste_livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre}}</td>
                <td>{{ livre.auteur|upper }}</td>
                <td>
                   <a href="{{ path("fiche_livre", { id: livre.id }) }}">fiche</a>
                   <a href="{{ path("modifier_livre", { id: livre.id }) }}">modifier</a>
                   <a href="{{ path("supprimer_livre", { id: livre.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?');">supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
    <tfooter></tfooter>
</table>

